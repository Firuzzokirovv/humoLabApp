<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Главная"
            android:textColor="#212121"
            android:textSize="32sp"
            android:textStyle="bold" />


        <com.google.android.material.card.MaterialCardView
            app:cardCornerRadius="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="#fff"
            android:orientation="vertical">

            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:text="Отправляйте денежные \n переводы зарубеж"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center"/>

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/humotransfer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSendHumoTransfer"
                    app:cornerRadius="32dp"
                    android:paddingVertical="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="19dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#DD6018"
                    android:text="Отправить перевод"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="12dp"
        android:orientation="horizontal"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_message" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Доступно обновление"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Получите новые возможности для денежных переводов!"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            >

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="20sp"
                        android:textColor="#212121"
                        android:textStyle="bold"
                        android:text="Популярные страны"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:elevation="0dp"
                                android:scrollbars="none"
                                >

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" >

                                    <com.google.android.material.card.MaterialCardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        app:cardCornerRadius="16dp"
                                        android:layout_marginTop="8dp"
                                        android:layout_marginEnd="8dp"
                                        >

                                        <RelativeLayout
                                            android:layout_width="112dp"
                                            android:layout_height="108dp"
                                            android:padding="12dp">

                                            <ImageView
                                                android:src="@drawable/flag_taj"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content" />

                                            <TextView
                                                android:fontFamily="sans-serif"
                                                android:text="Таджикистан"
                                                android:textSize="13sp"
                                                android:layout_centerHorizontal="true"
                                                android:textColor="@color/black"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentBottom="true"
                                                />
                                        </RelativeLayout>



                                    </com.google.android.material.card.MaterialCardView>
                                    <com.google.android.material.card.MaterialCardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        app:cardCornerRadius="16dp"
                                        android:layout_marginTop="8dp"
                                        android:layout_marginEnd="8dp"
                                        >

                                        <RelativeLayout
                                            android:layout_width="112dp"
                                            android:layout_height="108dp"
                                            android:padding="12dp">

                                            <ImageView
                                                android:src="@drawable/flag_taj"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content" />

                                            <TextView
                                                android:fontFamily="sans-serif"
                                                android:text="Таджикистан"
                                                android:textSize="13sp"
                                                android:layout_centerHorizontal="true"
                                                android:textColor="@color/black"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentBottom="true"
                                                />
                                        </RelativeLayout>



                                    </com.google.android.material.card.MaterialCardView>
                                    <com.google.android.material.card.MaterialCardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        app:cardCornerRadius="16dp"
                                        android:layout_marginTop="8dp"
                                        android:layout_marginEnd="8dp"
                                        >

                                        <RelativeLayout
                                            android:layout_width="112dp"
                                            android:layout_height="108dp"
                                            android:padding="12dp">

                                            <ImageView
                                                android:src="@drawable/flag_taj"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content" />

                                            <TextView
                                                android:fontFamily="sans-serif"
                                                android:text="Таджикистан"
                                                android:textSize="13sp"
                                                android:layout_centerHorizontal="true"
                                                android:textColor="@color/black"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentBottom="true"
                                                />
                                        </RelativeLayout>



                                    </com.google.android.material.card.MaterialCardView>
                                    <com.google.android.material.card.MaterialCardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        app:cardCornerRadius="16dp"
                                        android:layout_marginTop="8dp"
                                        >

                                        <RelativeLayout
                                            android:layout_width="112dp"
                                            android:layout_height="108dp"
                                            android:padding="12dp">

                                            <ImageView
                                                android:src="@drawable/flag_taj"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content" />

                                            <TextView
                                                android:fontFamily="sans-serif"
                                                android:text="Таджикистан"
                                                android:textSize="13sp"
                                                android:layout_centerHorizontal="true"
                                                android:textColor="@color/black"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentBottom="true"
                                                />
                                        </RelativeLayout>



                                    </com.google.android.material.card.MaterialCardView>
                                </LinearLayout>


                            </HorizontalScrollView>

                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
        </FrameLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>